{
  "name": "@xcvzmoon/express-utils",
  "description": "A collection of utilities for Express",
  "type": "module",
  "version": "0.1.1",
  "license": "MIT",
  "author": {
    "name": "Mon Albert Gamil",
    "email": "mrgamilmonalbert@gmail.com",
    "url": "https://github.com/xcvzmoon/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/xcvzmoon/express-utils"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "keywords": [
    "express",
    "zod",
    "validator",
    "schema",
    "multipart"
  ],
  "main": "dist/index.mjs",
  "types": "dist/index.d.mts",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "format": "oxfmt && oxfmt --check",
    "lint": "oxlint --type-aware",
    "dev": "bun --watch ./src/index.ts",
    "build": "bunx --bun tsdown",
    "start": "bun ./dist/index.mjs",
    "test": "vitest run",
    "test:watch": "vitest",
    "changelog:bump": "bunx changelogen@latest --bump",
    "changelog:release": "bunx changelogen@latest --release"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/busboy": "^1.5.4",
    "@types/express": "^5.0.6",
    "express": "^5.2.1",
    "oxfmt": "^0.27.0",
    "oxlint": "^1.42.0",
    "oxlint-tsgolint": "^0.11.4",
    "tsdown": "^0.20.1",
    "vitest": "^4.0.18",
    "zod": "^4.3.6"
  },
  "peerDependencies": {
    "express": "^5.2.1",
    "typescript": "^5",
    "zod": "^4.3.6"
  },
  "packageManager": "bun@1.3.8",
  "dependencies": {
    "busboy": "^1.6.0"
  }
}
